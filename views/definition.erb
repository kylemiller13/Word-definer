<h2 class="card-title">Definition: style="color:#7771e3" <%= @definition.name %></span></h2><br>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_definition">Edit Definition:</label>
  <input id="new_definition" name="new_definition" type="text" class="form-control">
  <br>
  <button type="submit" class="btn" style="background-color:#7771e3">Update Definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Definition</button>
</form>
